{% render 'partials/head.liquid' %}
{% include 'partials/header.liquid' %} 
<main>
    <section>
        <img src="/assets/photos/rouwtaak-blue.svg" alt="rouwtaak Image">
        <h1>Rouwstappen van het dag</h1>
        <p>3 oefeningen open vandaag</p>
    </section>
    <section class="rouwtaak-card">   
        <img src="https://fdnd-agency.directus.app/assets/{{ exerciseObject.image }}" alt="{{ exerciseObject.title }} foto">
        <button type="submit" class="start-oefening-btn">Start oefening</button>
        <section>
            <p>Schrijven</p>
            <h2>{{ exerciseObject.title }}</h2>
            <section class="inline">
                <img src="/assets/icons/community-drops-color.svg" alt="community-drops icon">
                <p>47 community drops</p>
            </section>
            <ul class="inline">
                <li class="inline">     
                    <img src="/assets/icons/time.svg" alt="time icon">
                    <P>25 min</P>
                </li>
                <li class="inline">     
                    <img src="/assets/icons/time.svg" alt="tips icon">
                    <P>3 tips</P>
                </li>      
            </ul>
        </section>  
    </section>

    <section>
        <p>Lezen</p>
        <h2>Rouwen, hoe doe je dat?</h2>
        <section class="community-drops">
            <ul class="inline">
                <li>     
                    <img src="/assets/icons/community-drops-color.svg" alt="community-drops icon">
                    <P>17 community drops</P>
                </li>
                <li>     
                    <img src="/assets/icons/time.svg" alt="time icon">
                    <P>15 min</P>
                </li>     
            </ul>        
        </section>
    </section>
    <section>
        <p>Meditatie</p>
        <h2>Golven van ongeloof</h2>
        <section class="community-drops">
            <ul>
                <li>     
                    <img src="/assets/icons/community-drops-color.svg" alt="rcommunity-drops icon">
                    <P>36 community drops</P>
                </li>
                <li>     
                    <img src="/assets/icons/time.svg" alt="time icon">
                    <P>3 min</P>
                </li>     
            </ul>        
        </section>
    </section>
</main>

